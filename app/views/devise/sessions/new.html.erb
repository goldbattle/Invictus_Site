<% provide(:title, "Sign In") %>

<%= render 'shared/navbar' %>

<div class="container">
  <div class="page-header">
    <h2>Sign in</h2>
  </div>
  <div class="row">
    <div class="col-md-3 col-md-offset-1">

    <%= render "shared/flash" %>

    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>

      <%= f.input :email, :autofocus => true, input_html: { class: "form-control" } %>
      <%= f.input :password, input_html: { class: "form-control" } %>
      <%= f.input :remember_me, :as => :boolean, inline_label: true %>
      <%= f.button :submit, "Sign in", class: 'btn btn-primary', :data => { disable_with: 'Submitting' }, style: "width:100%" %>

    <% end %>

    </div>
    <div class="col-md-4 col-md-offset-2">
      <ul style="list-style-type: none;">
        <li style="margin-top:20px;">
          <%= link_to "Sign up", new_registration_path(resource_name), class: "nav-pill-list" %>
        </li>
        <li style="margin-top:20px;">
          <%= link_to "Forgotten Password", new_password_path(resource_name), class: "nav-pill-list" %>
        </li>
      </ul>        
    </div>
  </div>
</div>

<%= render 'shared/footer' %>