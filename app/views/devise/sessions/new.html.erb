<% provide(:title, "Sign In") %>

<%= render 'shared/navbar' %>

<div class="container">
  <div class="page-header">
    <h2>Sign in</h2>
  </div>
  <div class="row">
    <div class="col-md-3 col-md-offset-1">

    <%= render "shared/flash" %>

    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>

      <%= f.input :email, :autofocus => true, input_html: { class: "form-control" } %>
      <%= f.input :password, input_html: { class: "form-control" } %>
      <%= f.input :remember_me, :as => :boolean, inline_label: true, label_html: { style: "padding-left:5px;" } %>
      <%= f.button :submit, "Sign in", class: 'btn btn-primary', :disable_with=>"Submitting", style: "width:100%" %>

    <% end %>

    </div>
    <div class="col-md-6 col-md-offset-2">
      <h3>
        <ul style="list-style-type: none;">
          <li style="margin-top:20px;">
            <span class="label label-default"><%= link_to "Sign up", new_registration_path(resource_name) %></span>
          </li>
          <li style="margin-top:20px;">
            <span class="label label-default"><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %></span>
          </li>
          <li style="margin-top:20px;">
            <span class="label label-default"><%= link_to "Forgotten Password", new_password_path(resource_name) %></span>
          </li>
        </ul>        
      </h3>
    </div>
  </div>
</div>

<%= render 'shared/footer' %>