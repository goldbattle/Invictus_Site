<a data-toggle="modal" data-target="#modalConfirmation">Toggle</a>

<!-- Modal -->
<div class="modal fade" id="modalConfirmation" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" style="left:auto;right:auto;">

    <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :post , :class => 'form-vertical' }) do |f| %>
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modalConfirmation" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Forgotten Password</h4>
        </div>
        <div class="modal-body">

          <%= f.input :email, :required => true, :autofocus => true, input_html: { class: "form-control" } %>

        </div>
        <div class="modal-footer">

          <%= f.button :submit, 'Send me reset password instructions', class: 'btn btn-success', :disable_with=>"Submitting" %>
          <button type="button" class="btn btn-default" data-dismiss="modalConfirmation">Close</button>

        </div>
      </div><!-- /.modal-content -->
    <% end %>

  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->