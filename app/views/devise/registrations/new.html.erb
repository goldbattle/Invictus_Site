<% provide(:title, 'Sign Up') %>

<%= render 'shared/navbar' %>

<div class="container">
  <div class="page-header">
    <h2>Sign Up</h2>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-1">

    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name) ) do |f| %>

      <%= f.input :username, :required => true %>
      <%= f.input :email, :required => true %>
      <%= f.input :password, :required => true %>
      <%= f.input :password_confirmation, :required => true %>
      <br>
      <%= f.button :submit, 'Create my account', class: 'btn btn-lg btn-success', :data => { disable_with: 'Submitting' }, style: "width:100%" %>

    <% end %>

    </div>
    <div class="col-md-6 col-md-offset-1">   
      <ul style="list-style-type: none;">
        <li style="margin-top:20px;">
          <span class="nav-pill-list"><%= link_to "Sign in", new_session_path(resource_name) %></span>
        </li>
        <li style="margin-top:20px;">
          <span class="nav-pill-list"><%= link_to "Forgotten Password", new_password_path(resource_name) %></span>
        </li>
      </ul>        
    </div>
  </div>
</div>

<%= render 'shared/footer' %>