<% provide(:title, "Confirmation") %>

<%= render 'shared/navbar' %>

<div class="container">
  <div class="page-header">
    <h2>Resend confirmation instructions</h2>
  </div>
  <div class="row">
    <div class="col-md-3 col-md-offset-1">

    <%= render "shared/flash" %>

    <%= simple_form_for resource, :url => confirmation_path(resource_name), :html => { :method => :post } do |f| %>

      <%= f.input :email, :autofocus => true, input_html: { class: "form-control" } %>
      <%= f.button :submit, 'Resend Instructions', class: 'btn btn-primary', :disable_with=>"Submitting", style: "width:100%;margin-top:15px" %>

    <% end %>

    </div>
    <div class="col-md-6 col-md-offset-2">
      <h3>
        <ul style="list-style-type: none;">
          <li style="margin-top:20px;">
            <span class="label label-default"><%= link_to "Sign in", new_session_path(resource_name) %></span>
          </li>
          <li style="margin-top:20px;">
            <span class="label label-default"><%= link_to "Sign up", new_registration_path(resource_name) %></span>
          </li>
          <li style="margin-top:20px;">
            <span class="label label-default"><%= link_to "Forgotten Password", new_password_path(resource_name) %></span>
          </li>
        </ul>        
      </h3>
    </div>
  </div>
</div>

<%= render 'shared/footer' %><p>