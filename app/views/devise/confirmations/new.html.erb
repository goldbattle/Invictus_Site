<h2>Resend confirmation instructions</h2>

<%= simple_form_for resource, :url => confirmation_path(resource_name), :html => { :method => :post } do |f| %>

  <%= f.input :email, :required => true, :autofocus => true, input_html: { class: "form-control" } %>
  <%= f.button :submit, 'Resend confirmation instructions', class: "btn btn-primary", :disable_with=>"Submitting" %>

<% end %>

<%= render "devise/shared/links" %>
