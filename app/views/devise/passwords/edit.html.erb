<h2>Change your password</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :put , :class => 'form-vertical' }) do |f| %>
  <%= f.hidden_field :reset_password_token %>
  <%= f.input :password, :required => true, :autofocus => true, input_html: { class: "form-control" } %>
  <%= f.input :password_confirmation, :required => true, input_html: { class: "form-control" } %>
  <%= f.button :submit, 'Change my password', :class => 'btn btn-primary', :disable_with=>"Submitting" %>
<% end %>

<%= render "devise/shared/links" %>
