<% provide(:title, 'Sign Up') %>

<%= render 'shared/navbar' %>

<div class="container">
  <div class="page-header">
    <h2>Forgotten Password</h2>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-1">

    <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :post , :class => 'form-vertical' }) do |f| %>

      <%= f.input :email, :required => true, :autofocus => true, input_html: { class: "form-control" } %>
      <%= f.button :submit, 'Send me reset password instructions', class: 'btn btn-primary', :disable_with=>"Submitting", style: "margin-top:10px;width:100%" %>

    <% end %>

    </div>
    <div class="col-md-6 col-md-offset-1">

      <%= link_to "Sign in", new_session_path(resource_name), class: "btn btn-large btn-primary" %><br>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-large btn-primary" %><br />
      <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "btn btn-large btn-primary" %><br>

    </div>
  </div>
</div>

<%= render 'shared/footer' %>