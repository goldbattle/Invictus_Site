<% provide(:title, "Edit Post") %>

<%= render 'shared/navbar' %>

<%= render 'shared/markdown_helper' %>

<div class="container">
  <div class="page-header">
    <h2>Edit Post</h2>
  </div>

  <!-- Breadcrumb -->
  <div class="row">
    <div class="col-lg-12">
      <ol class="breadcrumb">
        <li><%= link_to("Home", root_url )%></li>
        <li><%= link_to("Blog", posts_url )%></li>
        <li><%= link_to( @post.title , post_url(@post) )%></li>
        <li class="active">Edit Post</li>
      </ol>
    </div>
  </div>

  <hr style="margin-top:0px">

  <%= render "shared/flash" %>

  <%= form_for(@post, multipart: true) do |f| %>

    <%= render 'error_messages' %>

    <div class="pull-right form-inline">
      <%= f.select :is_visible, [['Post Visible', true], ['Post Hidden', false]], {}, class: "form-control" %>
      <%= f.submit "Submit", class: "btn btn-large btn-success", :data => { disable_with: 'Saving' } %>
    </div>

    <div class="form-group">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>

    <div class="form-group">
      <%= f.label :thumbnail %>
      <small>600 x 300</small><br>
      <%= f.file_field :thumbnail %>
    </div>

    <div class="form-group">
      <%= f.label :header %>
      <small>900 x 300</small><br>
      <%= f.file_field :header %>
    </div>

    <div class="form-group">
      <div class="row">
        <!-- Edit markdown -->
        <div class="col-lg-6">
          <%= f.label :content %>
          <small>(Ctrl + M for Help)</small>
          <%= f.text_area :content, :class=>"mdhtmlform-md" %>
        </div>
        <!-- Display converted html -->
        <div class="col-lg-6">
          <label>Html Output</label>
          <div class="mdhtmlform-html"></div>
        </div>
      </div>
    </div>
    
    
    
    
  <% end %>
</div>

<%= render 'shared/footer' %>